{% verbatim %}
<script id="certificate-verification-results-template" type="text/x-jsrender">

    {{if certificate_number}}

    <h3>Certificate</h3>

    <table>
        <tr>
            <td>Holder</td>
            <td>{{:holder_name}} {{:holder_surname}}</td>
        </tr>
        <tr>
            <td>Number</td>
            <td>{{:certificate_number}}</td>
        </tr>
        <tr>
            <td>Title</td>
            <td>{{:certificate_name}}</td>
        </tr>
        {{if certificate_status}}
        <tr>
            <td>Status</td>
            <td>{{:certificate_status}}</td>
        </tr>
        {{/if}}
        <tr>
            <td>Date of issue</td>
            <td>{{:certificate_issued_at}}</td>
        </tr>
        {{if certificate_description}}
        <tr>
            <td>Regulation of the STCW</td>
            <td>{{:certificate_description}}</td>
        </tr>
        {{/if}}
    </table>

    {{/if}}

    {{if endorsement_number}}

    <h3>Endorsement</h3>

    <table>
        <tr>
            <td>Endorsement number</td>
            <td>{{:endorsement_number}}</td>
        </tr>
        <tr>
            <td>Date of issue</td>
            <td>{{:endorsement_issued_at}}</td>
        </tr>
        {{if endorsement_valid_till}}
        <tr>
            <td>Date of expiration</td>
            <td>{{:endorsement_valid_till}}</td>
        </tr>
        {{/if}}
        {{if endorsement_description}}
        <tr>
            <td>Regulation of the STCW</td>
            <td>{{:endorsement_description}}</td>
        </tr>
        {{/if}}
    </table>

    {{if endorsement_domain.Functions && endorsement_domain.Functions.length}}

    <h3>Functions</h3>

    <p>The holder is authorised to perform the following functions, at the level specified, subject to any limitations specified.</p>

    <table class="three-columns">
        <thead>
            <tr>
                <th>Function</th>
                <th>Level</th>
                <th>Limitations</th>
            </tr>
        </thead>
        <tbody>
            {{for endorsement_domain.Functions}}
            <tr>
                <td>{{:Function}}</td>
                <td>{{:Level}}</td>
                <td>{{if Limitation}}{{:Limitation}}{{else}}-{{/if}}</td>
            </tr>
            {{/for}}
        </tbody>
    </table>

    {{/if}}

    {{if endorsement_domain.Capacities && endorsement_domain.Capacities.length}}

    <h3>Capacities</h3>

    <p>The lawful holder of this endorsement may serve in the following capacity specified in the applicable safe manning requirements of the administration.</p>

    <table class="three-columns">
        <thead>
            <tr>
                <th>Capacity</th>
                <th>Limitations</th>
            </tr>
        </thead>
        <tbody>
            {{for endorsement_domain.Capacities}}
            <tr>
                <td>{{:Capacity}}</td>
                <td>{{if Limitation}}{{:Limitation}}{{else}}-{{/if}}</td>
            </tr>
            {{/for}}
        </tbody>
    </table>

    {{/if}}

    {{/if}}

</script>
{% endverbatim %}

