<div class="certificate-verification-heading">
    <h3>
        Please, choose what you would like to verify.
    </h3>
    <ul class="certificate-buttons">
        <li>
            <h1>
                <a href="#" class="active" data-screen-id="#certificate-verification-certificate-without-endorsement">Certificate without endorsement</a>
            </h1>
        </li>
        <li>
            <h1>
                <a href="#" data-screen-id="#certificate-verification-certificate-with-endorsement">Certificate with endorsement</a>
            </h1>
        </li>
        <li>
            <h1>
                <a href="#" data-screen-id="#certificate-verification-endorsement-only">Endorsement only</a>
            </h1>
        </li>
    </ul>
    <div style="clear: both"></div>
</div>

<div class="certificate-verification-screen active" id="certificate-verification-certificate-without-endorsement">

    <form>
        <div class="form-row">
            <label>
                Certificate number *
            </label>
            <input type="text" size="60" name="certificateNumber"/>
        </div>
        <div class="form-row">
            <label>
                Holder name *
            </label>
            <input type="text" size="60" name="holderName"/>
        </div>
        <div class="form-row">
            <label>
                Holder surname *
            </label>
            <input type="text" size="60" name="holderSurname"/>
        </div>
        <div class="form-row">
            {# captcha #}
        </div>
        <div class="form-row">
            <input type="submit" value="Submit"/>
        </div>
    </form>

</div>
